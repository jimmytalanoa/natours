mixin reviewCard(review)
    .reviews__card
        .reviews__avatar
            img.reviews__avatar-img(src=`/img/users/${review.user[0].photo}`, alt=`${review.user[0].name}`)
            h6.reviews__user= review.user[0].name
        p.reviews__text= review.review
        .reviews__rating
            each start in [1, 2, 3, 4, 5]
                - const type = review.rating >= start ? 'active' : 'inactive'
                svg.reviews__star(class=`reviews__star reviews__star--${type}`)
                    use(xlink:href='/img/icons.svg#icon-star') 